<!DOCTYPE html>
<html>
  <head>
    <title>Base Rails</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>

  </head>

  <body>
<ul>
<%if session[:user_id] != nil%>
  <%  my_current_id = session[:user_id] %> 
  <% current_user = User.where({ :id => my_current_id }).at(0) %>
   User Type: <%= current_user.account_type %>
<%end%>

    <%if session[:user_id] == nil%>
      <li>
        <a href = "/user_sign_in">Sign In</a>
      </li>
      <li>
        <a href = "/user_sign_up">Sign Up</a>
      </li> 
    <%else%>
      <li>
        <a href = "/user_sign_out">Sign Out</a>
      </li>    
      <li>
        <a href = "/bookmarks">Bookmarks</a>
      </li>
    <%end%>
      <li>
        <a href = "/">Home</a>
      </li>
      <li>
        <a href = "/trails">All Trails</a>
      </li>
  
  </ul>

  <div><%=notice%></div>
  <div><%=alert%></div>

    <%= yield %>
  </body>
</html>
