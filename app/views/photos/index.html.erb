<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new photo
    </h2>

    <form action="/insert_photo" method="post">
      <div>
        <label for="url_box">
          Url
        </label>

        <input type="text" id="url_box" name="query_url">
      </div>

      

      <div>
        <label for="trail_id_box" >
          Trail
        </label>

        <select id="trail_id_box" name="query_trail_id">
          <% Trail.all.order(:name).each do |the_trail|%>
            <option value="<%=the_trail.id%>">
              <%= the_trail.name %>
            </option>
          <%end%>"
        </select>
      </div>


      <button>
        Upload photo
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Url
        </th>

        <th>
          User
        </th>

        <th>
          Trail
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
         <img src="<%= a_photo.url %>">
        </td>

        <td>
          <%= a_photo.user.username %>
        </td>

        <td>
          <%= a_photo.trail.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
