<div>
  <div>
    <h1>
      List of all comments
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new comment
    </h2>

    <form action="/insert_comment" method="post">
      <div>
        <label for="trail_id_box">
          Trail
        </label>

        <select id="trail_id_box" name="query_trail_id">
          <% Trail.all.order(:name).each do |the_trail|%>
            <option value="<%=the_trail.id%>">
              <%= the_trail.name %>
            </option>
          <%end%>"
        </select>


      </div>


      <button>
        Create comment
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Trail
        </th>

        <th>
          User
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_comments.each do |a_comment| %>
      <tr>
        <td>
          <%= a_comment.id %>
        </td>

        <td>
          <%= a_comment.trail.name %>
        </td>

        <td>
          <%= a_comment.user.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/comments/<%= a_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
