<div>
  <div>
    <h1>
      Like #<%= @the_like.id %> details
    </h1>

    <div>
      <div>
        <a href="/likes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_like/<%= @the_like.id %>">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Trail
      </dt>
      <dd>
        <%= @the_like.trail_id %>
      </dd>

      <dt>
        Photos
      </dt>
      <dd>
        <%= @the_like.photos_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit like
    </h2>

    <form action="/modify_like/<%= @the_like.id %>"  method="post" >
      <div>
        <label for="trail_id_box">
          Trail
        </label>

        <input type="text" id="trail_id_box" name="query_trail_id" value="<%= @the_like.trail_id %>">
      </div>

      <div>
        <label for="photos_id_box">
          Photos
        </label>

        <input type="text" id="photos_id_box" name="query_photos_id" value="<%= @the_like.photos_id %>">
      </div>

      <button>
        Update like
      </button>
    </form>
  </div>
</div>

<hr>
