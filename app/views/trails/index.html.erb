<div>
  <div>
    <h1>
      List of all trails
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new trail
    </h2>

    <form action="/insert_trail" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <input type="checkbox" id="length_box" name="query_length" value="1">

        <label for="length_box">Length</label>
      </div>

      <div>
        <label for="duration_box">
          Duration
        </label>

        <input type="text" id="duration_box" name="query_duration">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="difficulty_box">
          Difficulty
        </label>

        <input type="text" id="difficulty_box" name="query_difficulty">
      </div>

      <div>
        <label for="photos_count_box">
          Photos count
        </label>

        <input type="text" id="photos_count_box" name="query_photos_count">
      </div>

      <div>
        <label for="comments_count_box">
          Comments count
        </label>

        <input type="text" id="comments_count_box" name="query_comments_count">
      </div>

      <div>
        <label for="bookmarks_count_box">
          Bookmarks count
        </label>

        <input type="text" id="bookmarks_count_box" name="query_bookmarks_count">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <button>
        Create trail
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Length
        </th>

        <th>
          Duration
        </th>

        <th>
          Address
        </th>

        <th>
          Difficulty
        </th>

        <th>
          Photos count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Bookmarks count
        </th>

        <th>
          Likes count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trails.each do |a_trail| %>
      <tr>
        <td>
          <%= a_trail.id %>
        </td>

        <td>
          <%= a_trail.name %>
        </td>

        <td>
          <%= a_trail.length %>
        </td>

        <td>
          <%= a_trail.duration %>
        </td>

        <td>
          <%= a_trail.address %>
        </td>

        <td>
          <%= a_trail.difficulty %>
        </td>

        <td>
          <%= a_trail.photos_count %>
        </td>

        <td>
          <%= a_trail.comments_count %>
        </td>

        <td>
          <%= a_trail.bookmarks_count %>
        </td>

        <td>
          <%= a_trail.likes_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_trail.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_trail.updated_at) %> ago
        </td>

        <td>
          <a href="/trails/<%= a_trail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
